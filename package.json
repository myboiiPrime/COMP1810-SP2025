{
  "name": "online-bookstore-system",
  "version": "1.0.0",
  "description": "A comprehensive online bookstore system demonstrating data structures and algorithms implementation with Node.js, Express, MongoDB, and Vue.js",
  "main": "src/BookstoreApp.js",
  "scripts": {
    "start": "node src/demo.js",
    "demo": "node src/demo.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit --verbose",
    "test:integration": "jest tests/integration --verbose",
    "test:performance": "node tests/performance/benchmark.js",
    "server": "node server/app.js",
    "dev": "nodemon server/app.js",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "lint": "eslint src/ server/ --ext .js",
    "lint:fix": "eslint src/ server/ --ext .js --fix",
    "docs": "jsdoc src/ -r -d docs/",
    "clean": "rimraf node_modules package-lock.json",
    "install:all": "npm install && cd frontend && npm install",
    "setup": "npm run install:all && npm run build"
  },
  "keywords": [
    "bookstore",
    "data-structures",
    "algorithms",
    "nodejs",
    "express",
    "mongodb",
    "vue",
    "performance-analysis",
    "sorting",
    "searching",
    "stack",
    "queue",
    "priority-queue",
    "hash-table",
    "binary-search",
    "merge-sort"
  ],
  "author": "Online Bookstore Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/online-bookstore-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/online-bookstore-system/issues"
  },
  "homepage": "https://github.com/your-username/online-bookstore-system#readme",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongodb": "^6.1.0",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "redis": "^4.6.10",
    "sharp": "^0.33.0",
    "socket.io": "^4.7.4",
    "stripe": "^14.7.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "server/**/*.js",
      "!src/demo.js",
      "!**/node_modules/**"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "camelcase": "off"
    }
  }
}
